# test_emotion_predictor.py

import unittest
from emotion_detector.emotion_predictor import emotion_predictor

class TestEmotionPredictor(unittest.TestCase):
    
    def test_emotion_predictor_valid_input(self):
        # Teste com entrada v√°lida
        text = "I am happy"
        result = emotion_predictor(text)
        self.assertIsInstance(result, dict)
        self.assertIn('joy', result)
    
    def test_emotion_predictor_empty_input(self):
        # Teste com entrada vazia
        text = ""
        result = emotion_predictor(text)
        self.assertEqual(result, {})
    
    def test_emotion_predictor_none_input(self):
        # Teste com entrada None
        text = None
        result = emotion_predictor(text)
        self.assertEqual(result, {})

if __name__ == '__main__':
    unittest.main()
